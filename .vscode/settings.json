{
  "search.exclude": {
    "**/.yarn": true,
    "**/.vscode": true,
    "**/.pnp.*": true,
    "**/.next.*": true,
    "**/yarn.lock": true
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "graphql-config.load.baseDir": "./apps/frontend",
  "graphql-codegen.configFilePath": "./apps/frontend/codegen.ts",
  "graphql-codegen.fileExtensionsDeclaringGraphQLDocuments": [
    "graphql"
  ],
  "graphql-codegen.filePathToWatch": "./apps/frontend/src/(app|components)/**/*.graphql",
  "json.validate.enable": true,
  "json.schemaDownload.enable": true,
  "json.schemas": [
    {
      "fileMatch": [
        "**/*.opti-type.json"
      ],
      "url": "./.vscode/contenttype.schema.json"
    },
    {
      "fileMatch": [
        "**/*.opti-style.json"
      ],
      "url": "./.vscode/displaytemplate.schema.json"
    },
    {
      "fileMatch": [
        "**/*.schema.json"
      ],
      "url": "https://json-schema.org/draft-07/schema"
    }
  ]
}
